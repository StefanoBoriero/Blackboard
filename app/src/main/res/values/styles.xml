<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>
    </style>

    <style name="AppTheme.NoTitle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.GroupList" parent="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.Detail" parent="AppTheme.NoActionBar">
        <item name="android:windowEnterTransition">@transition/detail_in</item>
        <item name="android:windowExitTransition">@transition/detail_in</item>
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element_detail</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">38dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333131</item>
    </style>



</resources>
