<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/detail_header"
        android:id="@+id/detail_header"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX"
        android:layout_margin="24dp"
        android:textSize="@dimen/description_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_header"/>

    <ImageView
        android:id="@+id/description_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_icon"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:src="@drawable/ic_description_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@string/description"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        />

    <TextView
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:layout_marginStart="@dimen/margin_start_text"
        android:textSize="@dimen/description_text_size"
        android:singleLine="false"
        android:text="Lorem ipsum dolet sic amor"
        app:layout_constraintStart_toEndOf="@id/description_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_name"
        />

    <ImageView
        android:id="@+id/expiration_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_icon"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:src="@drawable/ic_date_range_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_icon"
        />

    <TextView
        android:id="@+id/expiration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:layout_marginStart="@dimen/margin_start_text"
        android:singleLine="false"
        android:text="6/6/66"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/expiration_icon"
        app:layout_constraintTop_toBottomOf="@id/description" />

    <ImageView
        android:id="@+id/suggestion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_icon"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expiration_icon"
        />

    <TextView
        android:id="@+id/suggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_icon"
        android:layout_marginStart="@dimen/margin_start_text"
        android:singleLine="false"
        android:text="Ezio Greggio"
        android:textSize="@dimen/description_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/suggestion_icon"
        app:layout_constraintTop_toBottomOf="@id/expiration"
        />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/accept_button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:backgroundTint="@color/greenAccept"
        android:src="@drawable/ic_my_list_white"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>