<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">
    <!--android:elevation="4dp"-->

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:textSize="20sp"
        tools:text="August 19 2017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/action_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_line_simple"

        app:layout_constraintTop_toBottomOf="@id/day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/completed_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_my_list_white"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:gravity="center"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            tools:text="Completed items: 3"/>

        <TextView
            android:id="@+id/added_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/add_black"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:gravity="center"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            tools:text="Added tasks: 0"/>

        <TextView
            android:id="@+id/balance_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_payment_black_24dp"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:gravity="center"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"

            tools:text="Balance activity: -3$"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>